package unico;
/**
 * Implementar un método que realice la multiplicación de dos números (sin utilizar el operador *)
	multiplica(3, 5) = 3 + 3 + 3 + 3 + 3 = 15
 */
public class Principal {

	public static void main(String[] args) {
		int a = 3;
        int b = 5;

        // Llamada al método de multiplicación
        int resultado = multiplica(a, b);
        System.out.println(a + " x " + b + " = " + resultado);
    }

    // Método para realizar la multiplicación mediante suma iterativa
    public static int multiplica(int a, int b) {
        int resultado = 0;

        // Se suma 'a' a 'resultado' 'b' veces
        for (int i = 0; i < b; i++) {
            resultado += a;
        }

        return resultado;
    }

}
